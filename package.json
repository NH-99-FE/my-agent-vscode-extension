{
  "name": "@agent/root",
  "displayName": "Agent",
  "publisher": "lianglh",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:agent.openChat",
    "onView:agent.chatView"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "agent",
          "title": "Scout",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "agent": [
        {
          "id": "agent.chatView",
          "name": "你的编程助手",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "agent.openChat",
        "title": "Open Agent Chat",
        "category": "Agent"
      }
    ],
    "configuration": {
      "title": "Agent",
      "properties": {
        "agent.provider.default": {
          "type": "string",
          "enum": [
            "auto",
            "mock",
            "openai"
          ],
          "default": "auto",
          "description": "Default provider selection mode for chat requests."
        },
        "agent.openai.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Optional OpenAI-compatible base URL. Leave empty to use the official default endpoint."
        },
        "agent.openai.defaultModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Default OpenAI-compatible model name used by the settings panel."
        },
        "agent.openai.models": {
          "type": "array",
          "default": [
            "gpt-4o-mini"
          ],
          "items": {
            "type": "string"
          },
          "description": "Recommended OpenAI-compatible model list for selection."
        }
      }
    }
  },
  "scripts": {
    "dev:web": "pnpm --filter @agent/webview-ui dev",
    "build:web": "pnpm --filter @agent/webview-ui build",
    "build:types": "pnpm --filter @agent/types build",
    "build:ws": "pnpm -r --filter ./packages/* --filter ./webview-ui run build",
    "build:turbo": "pnpm exec turbo run build",
    "typecheck:ext": "tsc -p tsconfig.extension.json --noEmit",
    "typecheck:types": "pnpm --filter @agent/types typecheck",
    "typecheck:web": "pnpm --filter @agent/webview-ui typecheck",
    "typecheck:ws": "pnpm -r --filter ./packages/* --filter ./webview-ui run typecheck",
    "typecheck:turbo": "pnpm exec turbo run typecheck",
    "build:ext": "node scripts/build-extension.mjs",
    "copy:web": "node scripts/copy-webview.mjs",
    "build": "pnpm build:ws && pnpm copy:web && pnpm build:ext",
    "typecheck": "pnpm typecheck:ws && pnpm typecheck:ext",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "commit": "git-cz",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"{src,packages,webview-ui,scripts}/**/*.{html,js,cjs,mjs,ts,tsx,css,scss,md}\"",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "vscode:prepublish": "pnpm build",
    "vsce:package": "vsce package",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@agent/types": "workspace:*",
    "openai": "^5.12.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@vscode/vsce": "^3.7.1",
    "commitizen": "^4.3.1",
    "cspell": "^9.6.4",
    "cz-git": "^1.12.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --cache --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "prettier --cache --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
